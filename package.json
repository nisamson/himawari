  "scripts": {
    "dev:client": "react-scripts start",
    "dev:server": "concurrently -p name -c \"yellow,magenta\" -n \"webpack-server,nodemon-server\" \"yarn dev:server:webpack\" \"yarn dev:server:nodemon\"",
    "build": "yarn build:client && yarn build:server",
    "build:client": "react-scripts build",
    "build:server": "webpack --config webpack.config.server.js --mode=production",
    "dev:server:webpack": "webpack --config webpack.config.server.js --mode=development --watch",
    "dev:server:nodemon": "rm -f build_server/server.js && wait-on -l build_server/server.js && nodemon build_server/server.js",
    "run:server": "yarn build:server && node build_server/server.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
